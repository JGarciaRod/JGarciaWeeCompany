@model ML.Usuario
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Usuarios</h1>

<hr />

<a class="btn btn-success" href="@Url.Action("Form","Usuario", new { IdUsuario = 0 })">Nuevo usuario</a>

<hr />

@if(Model.Usuarios != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Editar</th>
                <th>Nombre</th>
                <th>Email</th>
                <th>Empresa</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach(ML.Usuario usuario in Model.Usuarios)
            {
                <tr>
                    <td>
                        <a class="btn btn-warning" href="@Url.Action("Form","Usuario", new { IdUsuario = usuario.IdUsuario })">Editar</a>
                    </td>
                    <td>@usuario.Nombre</td>
                    <td>@usuario.Email</td>
                    <td>@usuario.Empresa</td>
                    <td>
                        <a class="btn btn-danger" href="@Url.Action("Delete","Usuario", new { IdUsuario = usuario.IdUsuario })",
                           onclick="return confirm('Estas seguro en eliminarlo');">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    
}

